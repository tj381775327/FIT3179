
{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width":200,
  "height": 340,
  "data": {
    "url": "https://raw.githubusercontent.com/tj381775327/FIT3179/main/data/hospital_beds_USA.csv"
  },  "params": [
    {
    "name": "type_selection",
    "bind": {
      "input": "select",
      "options": [
        null,
        "ICU",
        "ACUTE",
        "PSYCHIATRIC",
        "OTHER"
      ],
      "labels":[
        "Show All",
        "ICU",
        "ACUTE",
        "PSYCHIATRIC",
        "OTHER"
      ],
      "name": "type Selection: "
    }
  }
 ],
   "transform": [
    {"filter": "type_selection == null || datum.bed_type == type_selection"}
  ],
  "mark": "bar",
  "encoding": {
    "x": {"aggregate": "average", "field": "beds"},
    "y": {
      "field": "state",
      "scale": {"domain": ["CA", "TX", "FL", "IL", "NY", "WI"]}
    },
    "color": {"field": "bed_type"},
    "tooltip": [
      {"field": "bed_type", "type": "nominal"},
      {
        "aggregate": "average",
        "field": "beds",
        "type": "quantitative",
        "format": ","
      }
    ]
  },
  "config": {}
}
